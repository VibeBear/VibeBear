import Layout from '../layouts/Layout.astro';
---

<Layout title="VibeBear.Studio">
	<main>
		<section class="snap-always snap-center h-dvh bg-hero bg-contain bg-no-repeat bg-center vibebear-hue-rotate flex justify-center md:justify-end items-end">
			<h1 class="p-4 text-5xl font-bold bg-clip-text brightness-150 text-transparent bg-jungle bg-cover vibebear-background-animated">VibeBear.Studio</h1>
		</section>

		<section class="snap-always snap-center h-dvh flex flex-col justify-center place-items-center">
			<article class="w-96 mb-4">
				<h1 class="text-3xl font-bold bg-clip-text brightness-150 text-transparent bg-cover bg-gradient-to-r from-cyan-600 to-blue-900">Hey! ðŸ‘‹</h1>
				<ul class="text-cyan-600">
					<li>Software engineer</li>
					<li>Loves to code with <a href="https://swift.org" target="_blank">Swift</a></li>
					<li>Creator of <a href="https://glypheon.app" target="_blank" class="font-bold bg-clip-text brightness-200 text-transparent bg-cover bg-glypheon">Glypheon</a></li>
				</ul>
			</article>

			<form class="" action="https://formsubmit.co/b43cb83e428f141c7eec83a484f8ed1b" method="post">
				<fieldset class="flex flex-col gap-4 w-96" uk-grid>
					<legend class="mb-2 text-3xl font-bold bg-clip-text brightness-150 text-transparent bg-cover bg-gradient-to-r from-cyan-600 to-blue-900">Contact me!</legend>
					<input class="border-cyan-800 border p-2 w-full bg-theme text-cyan-600" type="email" name="email" placeholder="Your email">
					<textarea class="border-cyan-800 border p-2 w-full bg-theme text-cyan-600" rows="5" name="message" placeholder="Your message"></textarea>
					<button class="border-cyan-800 border p-2 w-full text-cyan-600" type="submit">Send</button>
				</fieldset>
			</form>
		</section>
	</main>
</Layout>

